<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2c418">


        <Button
            android:id="@+id/sginup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SGIN UP"
            android:layout_marginVertical="600dp"
            android:layout_marginHorizontal="500dp"

            />

        <Button
            android:id="@+id/sginin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SGIN IN"
            android:layout_marginVertical="600dp"
            android:layout_marginHorizontal="700dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="valet"
            android:textColor="#000000"
            android:textSize="100sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView"

            />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/valet"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

</RelativeLayout>